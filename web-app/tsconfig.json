{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "target": "es5",
    "lib": [
      "dom",
      "es2017"
    ],
    "paths": {
      "annotation": [
        "src/view/util/Annotation"
      ],
      "environment": [
        "src/view/config/environment/base.env",
        "src/view/config/environment/development.env",
        "src/view/config/environment/production.env",
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}